# Base path used by Vite + React Router. Must start and end with "/".
# Examples:
# - "/" (root domain)
# - "/-Ethio-Friends-Foundation/" (GitHub Pages repo path)
VITE_BASE_PATH=/

# Public site URL used in index.html meta tags. Must end with "/".
VITE_SITE_URL=http://localhost:8080/

# Optional. Leave empty to disable Google Search Console meta verification.
VITE_GOOGLE_SITE_VERIFICATION=

# Optional. Leave empty to disable Google Analytics (GA4).
VITE_GA_MEASUREMENT_ID=

# Supabase/DatabasePad public client credentials (used when VITE_FORMS_BACKEND=supabase).
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Where form submissions are sent:
# - "supabase" (current behavior)
# - "http" (future: your own API at /api/*)
VITE_FORMS_BACKEND=supabase

# Optional. If VITE_FORMS_BACKEND=http, set an API origin (no trailing "/").
# Leave empty to use same-origin requests (e.g. "/api/contact").
VITE_API_BASE_URL=
